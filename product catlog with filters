<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="UTF-8">
    <title>Product Catalog</title>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            padding: 20px;
        }
        h2 {
            text-align: center;
            color: #333;
        }
        select {
            padding: 5px 10px;
            margin-bottom: 20px;
            border-radius: 5px;
            border: 1px solid #ccc;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        li {
            background-color: #fff;
            margin: 5px 0;
            padding: 12px;
            border-radius: 6px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        li:hover {
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
            transform: scale(1.02);
            transition: 0.2s;
        }
    </style>
</head>
<body ng-controller="Ctrl">

<h2>Product Catalog</h2>

<select ng-model="cat">
    <option value="">All</option>
    <option ng-repeat="c in categories">{{c}}</option>
</select>

<ul>
    <li ng-repeat="p in products | filter:{category: cat}">
        {{p.name}} - {{p.category}} - ${{p.price}}
    </li>
</ul>

<script>
angular.module('app', []).controller('Ctrl', function($scope){
    $scope.products = [
        {name:'Laptop', category:'Electronics', price:1200},
        {name:'Phone', category:'Electronics', price:800},
        {name:'Shirt', category:'Clothing', price:50},
        {name:'Shoes', category:'Clothing', price:100},
        {name:'Coffee Maker', category:'Appliances', price:70}
    ];
    $scope.categories = ['Electronics','Clothing','Appliances'];
});
</script>

</body>
</html>
